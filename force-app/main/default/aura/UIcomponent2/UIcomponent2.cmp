<aura:component >
   <aura:attribute name="first" type="String" />
    <aura:attribute name="last"  type="String" />
    
    <ui:inputText label="First Name" value="{!v.first}" updateOn="keyup"/><br></br>
    <ui:inputText label="Last Name"  value="{!v.last}"  updateOn="keyup"/>
    <br></br>
    <ui:outputText value="{!v.first+' '+v.last}"/>
    
    
    
</aura:component>